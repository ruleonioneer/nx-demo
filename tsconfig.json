{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-demo/mylib": ["libs/mylib/src/index.ts"],
      "@nx-demo/shared": ["libs/shared/src/index.ts"],
      "@nx-demo/app1-lib": ["libs/app1-lib/src/index.ts"],
      "@nx-demo/app2-lib": ["libs/app2-lib/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
